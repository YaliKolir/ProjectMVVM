<Page x:Class="ProjectMVVM.View.StartTrivia"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectMVVM.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartTrivia">

    <Grid Background="LightGreen">
        <StackPanel x:Name="welcomeToTriviaPanel" Margin="100,0,100,0" Visibility="Visible">
            <Label Content="Welcome to the trivia!" FontSize="30" Foreground="Black" HorizontalAlignment="Center" Width="300" Margin="0,50,0,50"/>
            <Button BorderBrush="Black" x:Name="startPlaying" Content="Start Trivia" Click="StartPlaying_Click" IsEnabled="False" ToolTipService.ShowOnDisabled="True" Width="200" Height="50" Margin="0,100,0,0" FontSize="30" Foreground="Black"/>
        </StackPanel>
        <Button BorderBrush="Black"  Content="Log out" FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="40" Width="100" Margin="680,400,0,10" Click="ButtonBack_Click"/>

    </Grid>
</Page>

<Page x:Class="ProjectMVVM.View.LoginOrRegister"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectMVVM.View"
        mc:Ignorable="d"
        Title="LoginOrRegister" Height="450" Width="800">
    <Grid Background="LightGreen">

        <Label Content="Welcome To My Trivia!" HorizontalContentAlignment="Center" FontSize="50" Margin="30" />

        <Button Name="SendToLogin" Height="60" Width="200" VerticalAlignment="Center" Margin="0,100,0,125" Content="Login" FontSize="40" Click="Button_Click"/>
        <Label Content="Don't have an account? Join here!" HorizontalContentAlignment="Center" FontSize="25" VerticalAlignment="Center" Margin="0,150,0,20" />
        <Button Name="SendToRegister" Height="60" Width="200" Margin="60" Content="Register" VerticalAlignment="Bottom" FontSize="40" Click="SendToRegister_Click"/>
        <Frame x:Name="MainFrame" Navigated="MainFrame_Navigated_1" Margin="40,0,40,360"/>
    </Grid>
</Page>
